<Window x:Class="Block.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="670"
        Width="420">
    <DockPanel >
        <StackPanel DockPanel.Dock="Top" Height="65">
            <Button Height="28" Margin="0,0,10,0" Content="Начать" Click="Button_Click" />
            <Label Content="Score" Height="37" x:Name="Score" FontSize="24" FontWeight="Bold"/>
        </StackPanel>
        <WrapPanel Height="560" VerticalAlignment="Top" Width="400">
            <Canvas x:Name="canvasUpper1" Height="160" Width="200" HorizontalAlignment="Left"/>
            <Canvas x:Name="canvasUpper2" Height="160" Width="200" HorizontalAlignment="Right"/>
            <Border Grid.ColumnSpan="10" Grid.RowSpan="10" BorderThickness="2" BorderBrush="#7F000000" VerticalAlignment="Bottom">
                <Canvas x:Name="canvasMain" Height="400" Width="420" VerticalAlignment="Bottom"/>
            </Border>
        </WrapPanel>
    </DockPanel>
</Window>