<Window x:Class="Block.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="550" Width="420">
    <DockPanel >
        <StackPanel DockPanel.Dock="Top" Height="150">
            <Button Height="28" Margin="0,0,10,0" Content="Начать" Click="Button_Click" />
            <Label Content="Score" Height="36" x:Name="Score" FontSize="24" FontWeight="Bold"/>
            <Canvas x:Name="canvasUpper" Height="80" VerticalAlignment="Top"/>
        </StackPanel>
        <Border Grid.ColumnSpan="10" Grid.RowSpan="10" BorderThickness="2" BorderBrush="#7F000000">
            <Canvas x:Name="canvasMain" Width="400"/>
        </Border>
    </DockPanel>
</Window>